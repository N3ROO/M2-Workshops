
<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./head %>
</head>
<body class="container">

<div class="jumbotron">
    <h1>Workshops</h1>
    <p>here is the list of workshop</p>
</div>

<form action="/workshop" method="get">
    <button type="submit" class="btn btn-success">Create new workshop</button>
</form>

<ul class="list-unstyled"></ul>
<% workshops.forEach(function(workshop) { %>
    <li class="media my-4">
        <div class="media-body">
            <h5 class="mt-0 mb-1"><%= workshop.name %></h5>
            <%= workshop.description %>
        </div>

    <form action="/workshop" method="post">
        <input type="text" name="name" value="<%= workshop.name %>" hidden>
        <button type="submit" class="btn btn-warning">Update</button>
    </form>

    &nbsp;

    <form action="/api/remove-workshop" method="post">
        <input type="text" name="name" value="<%= workshop.name %>" hidden>
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>

    </li>
<% }); %>
</ul>

<footer>
    <% include ./footer %>
</footer>

</body>
</html>
