
<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./head %>
</head>
<body class="container">

<% if (update) { %>
<form action="/api/update-workshop" method="post">
<% } else { %>
<form action="/api/create-workshop" method="post">
<% } %>
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" class="form-control" id="name" value="<%= name %>" placeholder="Workshop Name" required>
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <input type="text" name="description" class="form-control" id="description" value="<%= description%>" placeholder="Give a description for your workshop" required>
    </div>
    <input type="text" name="old_name" value="<%= name %>" hidden>
    <button type="submit" class="btn btn-primary">Save</button>
    <a type="button" class="btn btn-secondary" href="/">Cancel</a>
</form>

<footer>
    <% include ./footer %>
</footer>

</body>
</html>
